          <%let a = 1;for(item of todolist) { %>
          <tr>
            <th scope="row"><%- a++ %></th>
            <td><%-item.activity %></td>
            <td><%-item.done %></td>
          </tr>
          <% } %>
        </tbody>
      </table>
